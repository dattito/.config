ralt - c : open -a iTerm
ralt - x : open -a Safari

ralt - s : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
ralt - a : yabai -m window --focus stack.next || yabai -m window --focus stack.first

ralt + rcmd - s : yabai -m window --display prev || yabai -m window --display last; yabai -m display --focus prev || yabai -m display --focus last
ralt + rcmd - a : yabai -m window --display next || yabai -m window --display first; yabai -m display --focus next || yabai -m display --focus first

#change focus between external displays (left and right)
ralt - w: yabai -m display --focus next || yabai -m display --focus first
ralt - e: yabai -m display --focus prev || yabai -m display --focus last

# -- Modifying the Layout --

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
